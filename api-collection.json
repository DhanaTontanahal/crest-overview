            "body": {
              "mode": "raw",
              "raw": "{\n  \"reviewerPlatform\": \"Commercial\",\n  \"comments\": \"Good progress on maturity dimensions\"\n}"
            }
          },
          "response": [
            { "name": "Success", "status": "200 OK", "body": "{ \"message\": \"Assessment reviewed\", \"reviewedAt\": \"2025-10-20\" }" }
          ]
        }
      ]
    },
