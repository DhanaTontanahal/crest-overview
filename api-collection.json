{
  "info": {
    "name": "Platform Maturity Dashboard API",
    "description": "API endpoint specifications for future backend integration of the Platform Maturity Dashboard",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/auth/login",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
            }
          },
          "response": [
            {
              "name": "Success",
              "status": "200 OK",
              "body": "{\n  \"token\": \"eyJhbGciOiJIUzI1NiIs...\",\n  \"user\": {\n    \"id\": \"uuid\",\n    \"name\": \"John Doe\",\n    \"email\": \"user@example.com\",\n    \"role\": \"superuser\"\n  }\n}"
            }
          ]
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/auth/logout",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          },
          "response": [
            { "name": "Success", "status": "200 OK", "body": "{ \"message\": \"Logged out successfully\" }" }
          ]
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/auth/me",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          },
          "response": [
            {
              "name": "Success",
              "status": "200 OK",
              "body": "{\n  \"id\": \"uuid\",\n  \"name\": \"John Doe\",\n  \"email\": \"user@example.com\",\n  \"role\": \"superuser\",\n  \"platformId\": null,\n  \"cioId\": null\n}"
            }
          ]
        }
      ]
    },
    {
      "name": "Teams",
      "item": [
        {
          "name": "List Teams",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/teams?quarter=Q4 2025&platform=Consumer&pillar=All",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          },
          "response": [
            {
              "name": "Success",
              "status": "200 OK",
              "body": "{\n  \"data\": [\n    {\n      \"name\": \"Team Alpha\",\n      \"maturity\": 6.5,\n      \"performance\": 7.2,\n      \"agility\": 5.8,\n      \"stability\": 72,\n      \"platform\": \"Consumer\",\n      \"pillar\": \"Engineering Excellence\",\n      \"quarter\": \"Q4 2025\"\n    }\n  ],\n  \"total\": 24\n}"
            }
          ]
        },
        {
          "name": "Create/Update Team",
          "request": {
            "method": "PUT",
            "url": "{{baseUrl}}/api/teams",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Team Alpha\",\n  \"maturity\": 6.5,\n  \"performance\": 7.2,\n  \"agility\": 5.8,\n  \"stability\": 72,\n  \"platform\": \"Consumer\",\n  \"pillar\": \"Engineering Excellence\",\n  \"quarter\": \"Q4 2025\"\n}"
            }
          },
          "response": [
            { "name": "Success", "status": "200 OK", "body": "{ \"message\": \"Team updated\", \"id\": \"uuid\" }" }
          ]
        },
        {
          "name": "Bulk Upload Teams (Excel)",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/teams/upload",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "body": {
              "mode": "formdata",
              "formdata": [{ "key": "file", "type": "file", "src": "teams.xlsx" }]
            }
          },
          "response": [
            { "name": "Success", "status": "200 OK", "body": "{ \"message\": \"24 teams imported\", \"created\": 20, \"updated\": 4 }" }
          ]
        },
        {
          "name": "Export Teams (Excel)",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/teams/export?quarter=Q4 2025",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          },
          "response": [
            { "name": "Success", "status": "200 OK", "body": "(Binary Excel file)", "header": [{ "key": "Content-Type", "value": "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet" }] }
          ]
        }
      ]
    },
