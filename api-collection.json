    {
      "name": "Assessments",
      "item": [
        {
          "name": "List Assessments",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/assessments?quarter=Q4 2025&platform=Consumer",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          },
          "response": [
            {
              "name": "Success",
              "status": "200 OK",
              "body": "{\n  \"data\": [\n    {\n      \"id\": \"uuid\",\n      \"platform\": \"Consumer\",\n      \"quarter\": \"Q4 2025\",\n      \"submittedBy\": \"Platform Lead\",\n      \"submittedAt\": \"2025-10-15\",\n      \"status\": \"submitted\",\n      \"answers\": [\n        { \"questionId\": \"bt-1\", \"score\": 4, \"evidence\": \"Joint OKRs established...\" }\n      ],\n      \"reviewedBy\": null,\n      \"reviewedAt\": null\n    }\n  ]\n}"
            }
          ]
        },
        {
          "name": "Submit Assessment",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/assessments",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"platform\": \"Consumer\",\n  \"quarter\": \"Q4 2025\",\n  \"answers\": [\n    { \"questionId\": \"bt-1\", \"score\": 4, \"evidence\": \"Joint OKRs established across all product teams\" },\n    { \"questionId\": \"bt-2\", \"score\": 3, \"evidence\": \"NPS tracking in place, quarterly reviews\" }\n  ]\n}"
            }
          },
          "response": [
